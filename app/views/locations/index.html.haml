.container
  .row
    .jumbotron-books
.container.section
  .row
    .col-md-12.text-center
      %h1 Iron Yard Locations
  .row
    .col-md-12.text-center
      - if can? :create, @location
        = link_to "New Location", new_location_path
  .row
    .col-md-12.text-center
      - if can? :create, @lesson
        = link_to "Add Courses", new_lesson_path
%br
.container.section
  .row
    - @locations.each do |location|
      .col-md-4
        %br
        %strong
          Name:
        = link_to location.name, location_path(location)
        %br
        %strong
          Address:
        = location.address
        %br
        %strong
          City:
        = location.city
        %br
        %strong
          State:
        = location.state
        %br
        %strong
          Zip Code:
        = location.zip
        %br
        - if can? :update, @location
          = link_to "Edit", edit_location_path(location)
        - if can? :destroy, @location
          = link_to "Delete", location_path(location), method: :delete
.container
  .row
    .col-md-12.text-center
      = will_paginate @locations
%br
