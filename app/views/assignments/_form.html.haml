= form_for @assignment do |f|
  = f.label :name
  = f.text_field :name, class: "form-control", placeholder: "Assignment name"
  %br
  = f.label :description
  = f.text_area :description, class: "form-control", placeholder: "Description name"
  %br
  = f.label :due_date
  = f.date_field :due_date, class: "form-control"
  %br
  = f.submit class: "btn-success"