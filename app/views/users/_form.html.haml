= form_for @user do |f|
  = f.label :name
  = f.text_field :name
  %br
  = f.label :github
  = f.text_field :github
  %br
  = f.label :email
  = f.email_field :email
  %br
  = f.label(:admin)
  = f.radio_button(:admin, true)
  = f.label(:admin, "Yes")
  = f.radio_button(:admin, false)
  = f.label(:admin, "No")
  %br
  = f.submit