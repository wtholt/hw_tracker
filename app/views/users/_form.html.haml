= form_for @user do |f|
  = f.label :name
  = f.text_field :name, class: "form-control"
  %br
  = f.label :github
  = f.text_field :github, class: "form-control"
  %br
  = f.label :email
  = f.email_field :email, class: "form-control"
  %br
  = f.label(:admin)
  = f.radio_button(:admin, true)
  = f.label(:admin, "Yes")
  = f.radio_button(:admin, false)
  = f.label(:admin, "No")
  %br
  = f.submit class: "btn-success"